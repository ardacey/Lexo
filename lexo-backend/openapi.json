          },
          "username": {
            "type": "string",
            "maxLength": 30,
            "minLength": 1,
            "title": "Username"
          },
          "email": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 100
              },
              {
                "type": "null"
              }
            ],
