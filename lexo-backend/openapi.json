          },
          "player1_user_id": {
            "type": "string",
            "title": "Player1 User Id"
          },
          "player2_user_id": {
            "type": "string",
            "title": "Player2 User Id"
          },
          "player1_score": {
            "type": "integer",
            "minimum": 0.0,
            "title": "Player1 Score"
          },
          "player2_score": {
            "type": "integer",
            "minimum": 0.0,
            "title": "Player2 Score"
          },
          "player1_words": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Player1 Words"
          },
          "player2_words": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Player2 Words"
          },
          "winner_user_id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Winner User Id"
          },
          "duration": {
            "type": "integer",
            "exclusiveMinimum": 0.0,
            "title": "Duration"
          },
          "letter_pool": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Letter Pool"
          },
          "started_at": {
            "type": "string",
            "title": "Started At"
          },
          "ended_at": {
            "type": "string",
            "title": "Ended At"
          }
        },
        "type": "object",
        "required": [
          "room_id",
          "player1_user_id",
          "player2_user_id",
          "player1_score",
          "player2_score",
          "player1_words",
          "player2_words",
          "duration",
          "letter_pool",
          "started_at",
          "ended_at"
        ],
        "title": "SaveGameRequest"
      },
      "SaveGameResponse": {
        "properties": {
          "success": {
            "type": "boolean",
