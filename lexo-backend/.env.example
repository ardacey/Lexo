# Production environment variables for Lexo Backend
# Copy this file to .env.production and fill in the values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=lexo
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=lexo_db

# ===========================================
# Supabase Configuration
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ===========================================
# API Settings
# ===========================================
API_PORT=8000
# CORS_ORIGINS should be your frontend URL(s), comma-separated
CORS_ORIGINS=https://website.com
ENVIRONMENT=production

# ===========================================
# Game Settings
# ===========================================
GAME_DURATION=60
LETTER_POOL_SIZE=16
MIN_WORD_LENGTH=2

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
