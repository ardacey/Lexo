{
  "name": "lexo",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "backend": "cd '../lexo-backend' && python3 -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently \"npm run backend\" \"npm run start\" --names \"backend,expo\" --prefix-colors \"blue,magenta\" --raw",
    "dev:ios": "concurrently \"npm run backend\" \"npm run ios\" --names \"backend,expo\" --prefix-colors \"blue,magenta\"",
    "build:android:release": "eas build --platform android --profile production",
    "submit:android": "eas submit --platform android --profile production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clear": "jest --clearCache"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@hey-api/client-fetch": "^0.13.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@supabase/supabase-js": "^2.47.0",
    "@tanstack/query-core": "^5.90.10",
    "@tanstack/react-query": "^5.90.2",
    "expo": "~54.0.12",
    "expo-constants": "~18.0.9",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.8",
    "expo-linear-gradient": "^15.0.7",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.10",
    "expo-secure-store": "^15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-updates": "~29.0.15",
    "expo-web-browser": "~15.0.8",
    "nativewind": "^4.2.1",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "~4.16.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.85.0",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^8.2.2",
    "eas-cli": "^0.0.0",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "expo-build-properties": "^1.0.9",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "react-test-renderer": "^19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
